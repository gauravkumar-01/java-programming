import java.util.*;

public class Main {

	public static void main(String[] args) {
	Scanner sc = new Scanner(System.in);
	int n = sc.nextInt();
	int row = 1;
	int star = 1;
    while(row <= n)
    {
        star = n+1-row;
        while(star > 0)
        {
            System.out.print("* ");
            star--;
        }
        row++;
       System.out.println();
    }
}
}
